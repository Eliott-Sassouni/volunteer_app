<div id="tf-contact" class="text-center">
        <div class="container">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <div class="section-title center">
                        <h2>Sign up <strong> to make a difference</strong></h2>
                        <div class="line">
                            <hr>
                        </div>
                        <div class="clearfix"></div>
                        <small><em>Sign up below so that we could send you spam emails!</em></small>            
                    </div>

                    <div><%= devise_error_messages! %></div>
                    <% resource.build_profile %>
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                    
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label :email %><br />
                                    <%= f.email_field :email, autofocus: true, class: "form-control" %>
                                </div>
                            </div>
                            <%= f.fields_for :profile do |profile_form| %>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <%= profile_form.label :photo, "Add a photo" %><br />
                                        <%= profile_form.text_field :photo, autofocus: true, class: "form-control" %>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label :password %>
                                    <% if @minimum_password_length %>
                                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                                    <% end %><br />
                                    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= f.label :password_confirmation %><br />
                                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                          <%= f.fields_for :profile do |profile_form| %>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= profile_form.label :age %><br />
                                    <%= profile_form.text_field :age, autofocus: true, class: "form-control" %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <%= profile_form.label :full_name %><br />
                                    <%= profile_form.text_field :full_name, autofocus: true, class: "form-control" %>
                                </div>
                            </div>
                          <% end %>
                        </div>
                        <div class="row">
                          <%= f.fields_for :profile do |profile_form| %>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <%= profile_form.label :description, "Tell us about you:" %><br />
                                    <%= profile_form.text_area :description, autofocus: true, class: "form-control" %>
                                </div>
                            </div>
                          <% end %>
                        </div>

                        <div class="row">
                          <div class="col-md-12">
                                <div class="form-group">
                                    <%= f.label :organization, "Are you a volunteer or an organization?" %>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                          <div class="col-md-1">
                                <div class="form-group">
                                    <%= f.select :organization, [['Volunteer', false], ['Organization', true]], class: "form-control" %>
                                </div>
                            </div>
                            <div class="col-md-11"></div>
                        </div>

                        <%= f.submit "Sign up", class: "btn tf-btn btn-default" %>

                        <!-- <button type="submit"> </button> -->
                        <% end %>

                    <%= render "devise/shared/links" %>

                </div>
            </div>

        </div>
</div>
