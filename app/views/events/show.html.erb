


		<h1><%= @event.name %></h1>
		<h3><%= @event.user.profile.full_name %></h3>

		<%= render "comments/form" %>

		<%= link_to 'back', events_path %>

		<% if @event.user == current_user %>
			| <%= link_to 'edit', edit_event_path(@event) %>
			| <%= link_to 'delete', event_path(@event),
			            method: :delete,
			            data: { confirm: 'Are you sure?' } %>
		<% end %>




		<div class="container">
		                <div class="row event_background">
		                    <div class="col-md-6 col-lg-6 events_image">
		                        <img src="<%= @event.photo %>" class="img-responsive">
		                    </div>
		                    <div class="col-md-6 col-lg-6 event_info">
		                        <div class="about-text">
		                            <div class="section-title center event-title">
		                            
		                            <div class="clearfix"></div>

		                            </div>
		                                <p class="intro"><%= @event.description %>We love building and rebuilding brands through our  specific skills. Using colour, fonts, and illustration, we brand companies in a way they will never forget.</p>
		                                <ul class="about-list">
		                                    <li>
		                                        <span class="fa fa-dot-circle-o"></span>
		                                        <strong>Description</strong> - <em><%= @event.description %></em>
		                                    </li>
		                                    <li>
		                                        <span class="fa fa-dot-circle-o"></span>
		                                        <strong>Organization</strong> - <em><%= @event.user.profile.full_name %></em>
		                                    </li>
		                                    <li>
		                                        <span class="fa fa-dot-circle-o"></span>
		                                        <strong>Location</strong> - <em><%= @event.location %></em>
		                                    </li>
		                                </ul>
		                        </div>
		                    </div>
		                </div>
		                <div class="row event_line">
		                    <div class="col-md-6 col-lg-6 col-md-offset-3"><hr></div>
		                </div>

		        </div>
		    </div>
		</div>

		<h2>Add a comment:</h2>

		<strong>Comment:</strong>

		<% @event.comments.each do |comment| %>
			<p>
		    	<%= comment.comment %> | <%= comment.commenter %>
		    	<% if (current_user.profile.full_name == comment.commenter) || (current_user.id == @event.user_id) %>
		    		 | <%= link_to 'Delete', event_comment_path(@event, comment),
			            method: :delete,
			            data: { confirm: 'Are you sure?' } %>
				<% end %>
			</p>
		<% end %>

