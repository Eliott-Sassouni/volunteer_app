<div id="tf-menachem" class="text-center whatever">
	<div class="overlay events-page">
        <div class="container event-title">

            <div class="row">
                <div class="col-md-8 col-md-offset-2">

                    <div class="section-title center">


					<h1><%= @profile.full_name %></h1>
					<h3><%= @profile.user.email.upcase %></h3><br />

					<img src="<%= @profile.photo %>", class="image-size">

					<p><%= @profile.description %></p>

					<h3>Events by this Organization:</h3>
					<% @events.each do |event| %>
						<%= link_to event.name, event_path(event) %><br>
						<%= event.description %><br>
						<%= event.location %><br>
					<% end %>

					<%= link_to 'All Organizations', profiles_path %>
					<% if @profile.user == current_user %>
						| <%= link_to 'edit', edit_user_registration_path %>
					<% end %>

					</div>
				</div>
			</div>
			
		</div>
	</div>
</div>